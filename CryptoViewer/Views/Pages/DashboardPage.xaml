<Page x:Class="CryptoViewer.UI.Wpf.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoViewer.UI.Wpf.Views.Pages" 
      xmlns:vm="clr-namespace:CryptoViewer.UI.Wpf.ViewModels"
      mc:Ignorable="d" 
      Title="Dashboard">

    <Border Background="{StaticResource BackgroundBrush}" Padding="20">
        <Grid>
            <TextBlock Text="Top Cryptocurrencies"
               FontSize="24"
               Foreground="{StaticResource PrimaryBrush}"
               Margin="0,0,0,10"/>

            <ListView ItemsSource="{Binding Assets}" SelectedItem="{Binding SelectedAsset, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Symbol}" Foreground="Gray"/>
                            <TextBlock Text="{Binding PriceUsd, StringFormat=C}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</Page>
