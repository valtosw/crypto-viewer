<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryColor">#3B82F6</Color>
    <Color x:Key="SecondaryColor">#06B6D4</Color>
    <Color x:Key="BackgroundDark">#1E1E2F</Color>
    <Color x:Key="BackgroundLight">#F9FAFB</Color>
    <Color x:Key="SurfaceDark">#2C2C3A</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceDark}"/>
    <SolidColorBrush x:Key="TextBrush" Color="White"/>
</ResourceDictionary>