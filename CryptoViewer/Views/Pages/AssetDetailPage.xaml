<Page x:Class="CryptoViewer.UI.Wpf.Views.Pages.AssetDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoViewer.UI.Wpf.Views.Pages"
      mc:Ignorable="d" 
      Title="Asset Details">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{StaticResource BackgroundBrush}" Padding="20">
            <StackPanel Orientation="Vertical">

                <Border Background="{StaticResource SurfaceBrush}" Padding="16" CornerRadius="10" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Asset.Name}" FontSize="26" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding Asset.Symbol}" FontSize="14"
                                   Foreground="{StaticResource TextBrush}" Opacity="0.7" Margin="0,6,0,0"/>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Border Background="{StaticResource BackgroundBrush}" Padding="6,4"
                                    CornerRadius="6" Margin="0,0,8,0">
                                    <TextBlock Text="{Binding Asset.Rank, StringFormat=Rank {0}}" FontSize="12"
                                           Foreground="{StaticResource TextBrush}" Opacity="0.85"/>
                                </Border>

                                <Border Background="{StaticResource BackgroundBrush}" Padding="6,4"
                                    CornerRadius="6">
                                    <TextBlock Text="{Binding Asset.ChangePercent24Hr, StringFormat={}{0:F2}%}" FontSize="12"
                                           Foreground="{StaticResource TextBrush}" Opacity="0.85"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Asset.PriceUsd, StringFormat={}{0:C2}}" FontSize="22"
                                   FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right"/>
                            <TextBlock Text="Price (USD)" FontSize="11" Foreground="{StaticResource TextBrush}"
                                   Opacity="0.75" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Padding="12" CornerRadius="10" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Market Cap" FontSize="11" Foreground="{StaticResource TextBrush}" Opacity="0.8"/>
                            <TextBlock Text="{Binding Asset.MarketCapUsd, StringFormat={}{0:N0}}" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" Padding="12" CornerRadius="10" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="24h Volume" FontSize="11" Foreground="{StaticResource TextBrush}" Opacity="0.8"/>
                            <TextBlock Text="{Binding Asset.VolumeUsd24Hr, StringFormat={}{0:N0}}" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" Padding="12" CornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="Supply" FontSize="11" Foreground="{StaticResource TextBrush}" Opacity="0.8"/>
                            <TextBlock Text="{Binding Asset.Supply, StringFormat={}{0:N0}, TargetNullValue=—}" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="{StaticResource SurfaceBrush}" Padding="12" CornerRadius="10" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Price:" FontWeight="Bold" Margin="0,0,8,6"
                               VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Asset.PriceUsd, StringFormat={}{0:C2}}"
                               VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Market Cap:" FontWeight="Bold" Margin="0,6,8,6"
                               VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Asset.MarketCapUsd, StringFormat={}{0:N0}}"
                               VerticalAlignment="Center" Margin="0,6,0,6" Foreground="{StaticResource TextBrush}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="24h Change:" FontWeight="Bold" Margin="0,6,8,0"
                               VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Asset.ChangePercent24Hr, StringFormat={}{0:F2}%}"
                               VerticalAlignment="Center" Margin="0,6,0,0" Foreground="{StaticResource TextBrush}"/>
                    </Grid>
                </Border>

                <TextBlock Text="Markets" FontSize="18" FontWeight="Bold" Margin="0,0,0,6" Foreground="{StaticResource PrimaryBrush}"/>

                <ItemsControl ItemsSource="{Binding Markets}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SurfaceBrush}" Padding="10" Margin="0,0,0,8" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding ExchangeId}" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                                        <TextBlock Text="{Binding Pair}" FontSize="12" Foreground="{StaticResource TextBrush}" Opacity="0.75" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1"
                                           Text="{Binding PriceUsd, StringFormat={}{0:$0.########}, TargetNullValue=No info}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>
